@page "/"

<PageTitle>Index</PageTitle>

<br /><br />
<ProgressBar Title="Overall" Height="40px" Width=" " InitialValue="@TotalNet" DisplayString="@DisplayGross"></ProgressBar>


@code {
    public static double NickMonthlyIncome = 4758.38;
    public static double LilianMonthlyIncome = 3066.00;

    public static double TotalMonthlyIncome = Math.Round(NickMonthlyIncome + LilianMonthlyIncome, 2);
    public static double TotalExpenses = Math.Round(NickExpenses.AllCosts.Sum() + LilianExpenses.AllCosts.Sum(), 2);

    public static string TotalNet = Math.Round((TotalExpenses / TotalMonthlyIncome) * 100, 2) + "%";
    public static string DisplayGross = $"${TotalExpenses}/${TotalMonthlyIncome} --> {Math.Round((TotalExpenses / TotalMonthlyIncome) * 100, 2)}%";

    public class KVPair
    {
        public string s { get; set; }
        public double d { get; set; }

        public KVPair(string s, double d)
        {
            this.s = s;
            this.d = d;
        }
    }
}